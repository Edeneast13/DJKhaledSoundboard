<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.brianroper.djkhaledsoundboard.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="210dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/djkhaled"
        android:layout_marginBottom="405dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="148dp"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginBottom="55dp">

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/ciroc"
            android:layout_marginLeft="0dp"
            android:onClick="buttonClicked"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc2"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/ciroc"
            android:layout_marginLeft="7dp"
            android:onClick="buttonClicked"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc3"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/ciroc"
            android:layout_marginLeft="7dp"
            android:onClick="buttonClicked"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc4"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/ciroc"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="0dp"
            android:onClick="buttonClicked"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc5"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/ciroc"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:onClick="buttonClicked"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc6"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/ciroc"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:onClick="buttonClicked"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc7"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/ciroc"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="0dp"
            android:onClick="buttonClicked"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc8"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/ciroc"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="7dp"
            android:onClick="buttonClicked"/>

        <ImageView
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:id="@+id/ciroc9"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/ciroc"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="12dp"
            android:onClick="buttonClicked"/>
    </GridLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginTop="45dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/playback_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="pausePlayback"
        android:visibility="invisible"
        android:elevation="6dp"
        android:fontFamily="sans-serif-regular"
        android:background="@color/colorAccent"/>
</RelativeLayout>
